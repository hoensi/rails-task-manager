<h1>Tasks list</h1>

<h2 class="btn btn-success"><%= link_to "New task +", new_task_path %></h2>
<ol>
  <% @tasks.each do |task| %>
    <li>

      <%= link_to task.name, task_path(task) %>
      <%= task.description %>
      <p class="btn btn-light"><%= link_to "Edit", edit_task_path(task) %></p>
      <p class="btn btn-danger"><%= link_to 'Delete!', task_path(task), method: :delete , data: {confirm: 'Are you sure??'}%></p>
    </li>
  <% end %>
</ol>
